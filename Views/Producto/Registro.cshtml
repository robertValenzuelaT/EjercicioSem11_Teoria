@model Producto

<h1>Registrar</h1>

<form method="post">
    <div class="form-group">
            <label asp-for="NomProd"></label>
            <input asp-for="NomProd" class="form-control">
    </div>
    <div class="form-group">
            <label asp-for="Precio"></label>
            <input asp-for="Precio" class="form-control">
    </div>
    <div class="form-group">
            <label asp-for="UrlFoto"></label>
            <input asp-for="UrlFoto" class="form-control">
    </div>
    <div class="form-group">
            <label asp-for="Descripcion"></label>
            <input asp-for="Descripcion" class="form-control">
    </div>

    <div class="form-group">
            <label asp-for="Comprador"></label>
            <input asp-for="Comprador" class="form-control">
    </div>


    <div class="form-group">
            <label asp-for="TelfComp"></label>
            <input asp-for="TelfComp" class="form-control">
    </div>

    <div class="form-group">
            <label asp-for="Lugar"></label>
            <input asp-for="Lugar" class="form-control">
    </div>
    
    
     <div class="form-group">
            <label asp-for="Categoria"></label>
            <select asp-for="CategoriaId" asp-items="ViewBag.Categorias" class="form-control"></select>
    </div>
    <button class="btn btn-primary">Registrar</button>
</form>

